<% content_for :title, "People" %>
<h1>People</h1>

  <% @top_people.each do |person| %>

  <div class="circle">

    <% if person.wikipedia_image %>
      <% style = "background-image: url('#{person.wikipedia_image}');" %>
    <% end %>
    <%= link_to person.name, person, class: 'bg-link', style: style, title: pluralize(person.records_count, 'thing') %>
    <%= link_to person.name, person, class: 'name', title: pluralize(person.records_count, 'thing') %>
  </div>

  <% end %>
