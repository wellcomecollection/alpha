<% content_for :title, "All collections" %>

<%= render 'shared/admin_nav' %>

<h1>All collections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>

    <% @collections.each do |collection| %>

      <tr>
        <th><%= link_to collection.name, collection %></th>
        <td>
          <%= link_to 'Edit', edit_collection_path(collection), class: 'is-admin' %> |
          <%= link_to 'Editorial', collection_editorial_path(collection), class: 'is-admin' %> |

          <%= form_for collection, url: collection_status_path(collection), html: {class: 'inline'} do |form| %>
            <%= form.hidden_field :hidden, value: !collection.hidden %>
            <%= button_tag (collection.hidden ? 'Un-hide' : 'Hide'), class: 'link is-admin' %>
          <% end %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>