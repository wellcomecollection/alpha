<tr>
  <td><%= link_to collection.name, collection %></td>
  <td>
    <%= link_to 'Edit', edit_collection_path(collection), class: 'is-admin' %> &nbsp;&bull;&nbsp; 
    <%= link_to 'Editorial', collection_editorial_path(collection), class: 'is-admin' %> &nbsp;&bull;&nbsp; 

    <%= form_for collection, url: collection_status_path(collection), html: {class: 'inline'} do |form| %>
      <%= form.hidden_field :hidden, value: !collection.hidden %>
      <%= button_tag (collection.hidden ? 'Show' : 'Hide'), class: 'link is-admin' %>
    <% end %>
  </td>
</tr>