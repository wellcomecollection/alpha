<% content_for :title, @collection.name %>

<h1><%= @collection.name %></h1>

<% if logged_in_as_admin? %>
  <div>
    <%= link_to 'Edit', edit_collection_path(@collection), class: "is-admin" %>
  </div>
<% end %>

<% @records.each do |thing| %>
  <div class="cover-box">
    <div class="cover">
      <%= link_to thing_path(thing), title: thing.title do %>
        <% if thing.cover_image_url %>
          <%= image_tag thing.cover_image_url(150,300) %>
        <% else %>
          <%= thing.title %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>