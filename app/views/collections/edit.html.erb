<% content_for :title, "Edit collection" %>

<%= render 'shared/admin_nav' %>

<%= form_for @collection do |form| %>

  <%= render 'basic_fields', form: form %>

  <%= render 'record_numbers', form: form, existing_record_identifiers: @record_identifiers %>

  	<button type="submit">SAVE</button>&nbsp;&nbsp;&nbsp;<a href="#" style="color:red" onclick="window.history.back(); return false;">Cancel</a>
<% end %>

<p>
  <%= form_for @collection, url: collection_status_path(@collection), class: 'inline' do |form| %>
    <%= form.hidden_field :hidden, value: !@collection.hidden %>
    Or, do you want to <button type="submit" class="link is-admin"><%= @collection.hidden ? 'show ' : 'hide' %> this collection</button>?
  <% end %>
</p>