<h1><%= @thing.title %></h1>
<p><%= @thing.identifier %></p>


<% if @thing.people.length > 0 %>
  <p>
    By
    <%= @thing.people.collect do |person| %>
      <% link_to person.name, person %>
    <% end.to_sentence.html_safe %>
  </p>

  <% people_with_wikipedia_intros = @thing.people.select {|p| p.wikipedia_intro } %>


  <% if people_with_wikipedia_intros.length > 0 %>

    <h2>About the <%= people_with_wikipedia_intros.length == 1 ? 'author' : 'authors' %></h2>

    <% people_with_wikipedia_intros.each do |person| %>

      <p>
        <% person.wikipedia_intro[0..1].each do |s| %>
          <%= s.gsub(/\[\d+\]/, '') %>
        <% end %>
        <% if person.identifiers['wikipedia_en'] %>
          <small><%= link_to "Wikipedia", "https://en.wikipedia.org/wiki/#{person.identifiers['wikipedia_en']}" %></small>
        <% end %>
      </p>
    <% end %>
  <% end %>
<% end %>

<h4>Subjects</h4>
<p>
  <%= @subjects.collect do |subject| %>
    <% link_to subject.label, subject %>
  <% end.to_sentence.html_safe %>
</p>

<% if @thing.image_urls.length > 0 %>
  <div style="width: 100%;background-color:#666;">
    <% url = @thing.image_urls(size: 2000).first %>
    <%= link_to url do %>
      <%= image_tag url, style: 'width: 100%;' %>
    <% end %>
  </div>

  <% @thing.image_service_urls.drop(1).each do |image_service_url| %>
    <%= link_to "#{image_service_url}/full/!800,800/0/default.jpg" do %>
      <%= image_tag "#{image_service_url}/full/!200,200/0/default.jpg", style: 'width: auto;' %>
    <% end %>
  <% end %>

<% else %>

  <p>This thing hasnâ€™t been digitized (yet), we think.</p>

<% end %>
